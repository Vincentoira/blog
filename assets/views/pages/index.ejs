<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  </head>

  <link
    href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/css/bootstrap.min.css"
    rel="stylesheet"
    integrity="sha384-giJF6kkoqNQ00vy+HMDP7azOuL0xtbfIcaT9wjKHr8RbDVddVHyTfAAsrekwKmP1"
    crossorigin="anonymous"
  />
  <link rel="stylesheet" href="/CSS/main.css" />
  <link rel="stylesheet" href="/CSS/styles.css" />
  <body>
    <%- include("../partials/header") %>
    <div class="container">
      <br />
      <div class="row">
        <% classes.forEach(function(class_) { %>
        <div class="card col-md-4 shadow p-2 text-center g-2">
          <% if (class_.image.includes("<svg")) { %>
          <div class="logo"><%-class_.image%></div>
          <% } else { %>
          <div class="logo">
            <img src="<%=class_.image%>" alt="" />
          </div>
          <%}%>
          <div class="card-body">
            <h4 class="card-title"><%=class_.name%></h4>
            <small> <%=class_.description%> </small><br />
            <a href="/class/<%=class_.id%>" class="btn btn-outline-success"
              >Launch Session</a
            >
          </div>
        </div>
        <%}); %>
      </div>
    </div>
  </body>
</html>
